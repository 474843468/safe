<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 边距 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!-- 定义宽高 -->
    <size
        android:height="30dp"
        android:width="60dp" />

    <!-- 圆角 -->
    <corners android:radius="5dp" />

    <!-- 纯色 -->
    <solid android:color="#459FD7" />

</shape>