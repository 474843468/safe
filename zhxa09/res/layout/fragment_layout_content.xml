<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbHome"
            style="@style/bottom_radio_button_style"
            android:background="#00000000"
            android:drawableTop="@drawable/home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rbNewsCenter"
            style="@style/bottom_radio_button_style"
            android:drawableTop="@drawable/newscenter_selector"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rbSmartService"
            style="@style/bottom_radio_button_style"
            android:drawableTop="@drawable/smartservice_selector"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rbGovAffairs"
            style="@style/bottom_radio_button_style"
            android:drawableTop="@drawable/govaffairs_selector"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rbSetting"
            style="@style/bottom_radio_button_style"
            android:drawableTop="@drawable/setting_selector"
            android:text="设置" />
    </RadioGroup>

    <cn.itcast.zhxa09.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rg" >
    </cn.itcast.zhxa09.widget.NoScrollViewPager>

</RelativeLayout>